        <GridView Grid.Row="1"
                  Padding="20"
                  ItemsSource="{x:Bind favoriteVM.FavoriteSongs, Mode=OneWay}">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:Song">
                    <StackPanel>
                        <Image Source="{x:Bind Cover, Mode=OneWay}" Width="150" Height="150" Margin="20"/>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button x:Name="UnFavoriteBtn"
                                    Click="UnFavoriteBtn_Click">
                                <Image Source="ms-appx:///Assets/like.png"
                                       Width="15"/>
                            </Button>
                            <StackPanel Width="100">
                                <TextBlock Text="{x:Bind Title, Mode=OneWay}"
                                           FontSize="25"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{x:Bind Artist, Mode=OneWay}"
                                           FontSize="20"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
